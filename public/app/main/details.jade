
script(src='http://maps.google.com/maps/api/js?libraries=placeses,visualization,drawing,geometry,places')
script(src='http://code.angularjs.org/1.3.15/angular.js')
script(src='http://rawgit.com/allenhwkim/angularjs-google-maps/master/build/scripts/ng-map.js')
    div(ng-app='app', ng-controller='DetailsCtrl as vm')
        .form-group.form-group-sm
            .row
                .col-md-4 From:
                    input.form-control(type='text', ng-model='from', value='Baku')
                .col-md-4 To:
                    input.form-control(type='text', ng-model='to', value='Baku')
                div(style='width: 90%; float:left; height: 140%;padding: 30px;box-shadow: 5px 5px 5px #888888;')
                    ng-map(zoom='8', center='Azerbaijan', style='height:140%')
                        marker(position='{{from}}')
                        marker(position='{{to}}')
                        directions(draggable='true', panel='directions-panel', travel-mode='DRIVING', on-directions_changed='vm.myFunc();', origin='{{from}}', destination='{{to}}')
