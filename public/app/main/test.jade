script(src="https://maps.google.com/maps/api/js?libraries=placeses,visualization,drawing,geometry,places")
script(src="https://rawgit.com/allenhwkim/angularjs-google-maps/master/build/scripts/ng-map.js")
style.
    html, body {width:100%; height: 100%; padding:0; margin: 0}
    body {padding: 5px}
    * { box-sizing: border-box; }
div(ng-app="ngMap")
    div(style='width: 68%; float:left; height: 100%')
    ng-map(zoom='14', center='1135 Karamea-Kohaihai Rd, Kahurangi National Park, Tasman', style='height:90%')
        directions(draggable='true', panel='directions-panel', travel-mode='DRIVING', origin='Sofia', destination='Plovdiv')
    span     Directions path length:
    span   {{map.directionsRenderers[0].directions.routes[0].overview_path.length}}
div(id="directions-panel" style="width: 28%; float:left; height: 100%; overflow: auto; padding: 0px 5px")
