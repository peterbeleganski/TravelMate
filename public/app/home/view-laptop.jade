.container(ng-controller="HomeCtrl")
   h1 Selected laptop
   br
   br
   hr
   .row
      .col-md-6
         img.img-rounded.max-res(src="{{laptopDetails.img}}")
         button.btn.btn-warning(ng-click="backToGallery()") Back to gallery
      .col-md-6
         h1 Brand: {{laptopDetails.brand}}
         h3 Price: {{laptopDetails.price}}$
         h3 Country: {{laptopDetails.country}}
         h4 Description:
            p.text-muted {{laptopDetails.desc}}
