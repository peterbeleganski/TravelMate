extends includes/layout

block main-content
    .header(ng-controller='LoginCtrl')
        .navbar.navbar-default(role='navigation')
            .container(ng-cloak='')
                .navbar-header
                    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#js-navbar-collapse')
                        span.sr-only Toggle navigation

                        span.icon-bar

                        span.icon-bar

                        span.icon-bar

                    a.navbar-brand(href='/') TravelMate

                #js-navbar-collapse.collapse.navbar-collapse
                    ul.nav.navbar-nav
                        li
                            a(href='/') Home
                        li
                            a(href='/ads') Ads
                        li(ng-show="!identity.isAuthenticated()")
                            a(href='/sign-up') Register
                        li(ng-hide="identity.isAuthenticated()")
                            a(href="/login") Login
                    div(ng-include="'partials/account/user-navbar'")


        section
        br
        br
    div.ui-view-container
        div(ng-view)
    footer
        p.text-center &copy; TravelMate
